<!-- view a list of maps -->
<main class='list_view'>
  <!-- profile-bar: shows active user and filter options -->
  <section class='profile-bar profile_title'>
    <!-- profile-container only visible on large screens -->
    <div class='profile-container'>
      <img class='profile-pic' src=''>
      <h2 class="is-size-3">user name</h2>
    </div>
    <!-- selections-container: buttons to filter results -->
    <div class='selections-container'>
      <button class='selection-box' id='fav'>Favourites</button>
      <button class='selection-box' id='cont'>Contributions</button>
    </div>
  </section>
  <!-- second column on large screens -->
  <section>
    <section class='map-list'>
      <!-- List of Maps Populated HERE -->
    </section>
    <!-- paging buttons -->
    <section class="is-flex-direction-row is-justify-content-space-between p-2">
      <button class='previous-page-button button is-info is-outlined' disabled>Previous Page</button>
      <button class='next-page-button button is-info is-outlined'>Next Page</button>
    </section>
  </section>
</section>
</main>
